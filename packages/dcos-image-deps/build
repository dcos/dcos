#!/bin/bash
source /opt/mesosphere/environment.export
export LIB_INSTALL_DIR="$PKG_PATH/lib/python3.4/site-packages"
mkdir -p "$LIB_INSTALL_DIR"

# Install wheels.
for package in aiohttp_jinja2 azure-common azure-nspkg beautifulsoup4 docutils py webob; do
  pip3 install --no-deps --no-index --target="$LIB_INSTALL_DIR" /pkg/src/$package/*.whl
done

for package in aiohttp azure-storage chardet coloredlogs humanfriendly docker-py waitress websocket-client; do
  pip3 install --no-deps --install-option="--prefix=$PKG_PATH" --root=/ /pkg/src/$package
done
