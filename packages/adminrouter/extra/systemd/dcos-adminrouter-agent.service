[Unit]
Description=Admin Router Agent: exposes a unified control plane proxy for components and services using NGINX

[Service]
Restart=always
StartLimitInterval=0
RestartSec=5
LimitNOFILE=16384
EnvironmentFile=/opt/mesosphere/environment
Type=forking
PIDFile=$PKG_PATH/nginx/logs/nginx.pid
PrivateDevices=yes
StandardOutput=journal
StandardError=journal
SyslogIdentifier=adminrouter-agent
Environment=AUTH_ERROR_PAGE_DIR_PATH=${PKG_PATH}/nginx/conf/errorpages
EnvironmentFile=/opt/mesosphere/etc/adminrouter.env
ExecStartPre=/opt/mesosphere/bin/dcos-shell /bin/ping -c1 ready.spartan
ExecStartPre=/opt/mesosphere/bin/dcos-shell /bin/ping -c1 leader.mesos
ExecStart=/opt/mesosphere/bin/dcos-shell $PKG_PATH/nginx/sbin/adminrouter.sh -c $PKG_PATH/nginx/conf/nginx.agent.conf
ExecReload=/usr/bin/kill -HUP $MAINPID
KillSignal=SIGQUIT
KillMode=mixed
