{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs",
    "libseccomp"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/mesosphere/mesos",
    "ref": "d8bb5283475665fe404e8c67d3a8e4d8f951ad21",
    "ref_origin": "till/tls-host-validation"
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
