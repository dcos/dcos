{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs",
    "libseccomp"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/mesosphere/mesos",
    "ref": "3ef64030d7f76da28dcb9bb58377043ff4fdeea1",
    "ref_origin": "greg/agent-draining"
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "state_directory": true,
  "sysctl": {
    "dcos-mesos-slave": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    },
    "dcos-mesos-slave-public": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    }
  }
}
