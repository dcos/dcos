{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/mesosphere/mesos",
    "ref": "2cf3b98d7e1cf1fec70141aec1bc519a498a31a4",
    "ref_origin": "dcos-mesos-1.5.x-nightly-d2289d1"
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "state_directory": true,
  "sysctl": {
    "dcos-mesos-slave": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    },
    "dcos-mesos-slave-public": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    }
  }
}
