{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/mesosphere/mesos",
    "ref": "bf8d2f21f403d8650ee9beeed7f7f2e55b79fc6f",
    "ref_origin": "dcos-mesos-mesosphere/1.2.x-nightly-563f24c"
  },
  "environment": {
