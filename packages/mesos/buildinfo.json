{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs",
    "libseccomp"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/asekretenko/mesos",
    "ref": "de8a1fd9813480e08747aa95968767fb6b673856",
    "ref_origin": "MESOS-10125"
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "state_directory": true,
  "sysctl": {
    "dcos-mesos-slave": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    },
    "dcos-mesos-slave-public": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    }
  }
}
