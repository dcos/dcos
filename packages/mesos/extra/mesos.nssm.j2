[service]
Description = Mesos Agent
DisplayName = mesos-agent
Name = mesos-agent
Application = {{ pkg_inst_dpath }}\bin\mesos-agent.exe
AppDirectory = {{ pkg_inst_dpath }}\bin
AppParameters = --master="zk://{{ master_priv_ipaddr }}:{{ zk_client_port }}/mesos" --launcher_dir="{{ pkg_inst_dpath }}\bin" --log_dir="{{ pkg_log_dpath }}" --appc_store_dir="{{ pkg_rtd_dpath }}\images" --work_dir="{{ pkg_work_dpath }}" --runtime_dir="{{ pkg_rtd_dpath }}" --isolation="windows/cpu,windows/mem,filesystem/windows" --containerizers="mesos,docker" --attributes="os:windows" --ip="{{ local_priv_ipaddr }}" --hostname_lookup="false"  --resources="ports:[10000-34000]" --executor_registration_timeout="10mins" --fetcher_stall_timeout="10mins"
