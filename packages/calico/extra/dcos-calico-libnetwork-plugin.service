[Unit]
Description=DC/OS Calico Node: Docker libnetwork plugin for Calico in DC/OS

[Service]
EnvironmentFile=/opt/mesosphere/environment
EnvironmentFile=/opt/mesosphere/etc/calico-node.env
ExecStart=/opt/mesosphere/bin/calico-libnetwork-plugin
ExecStartPost=/opt/mesosphere/bin/create-calico-docker-network.py
TimeoutStartSec=60s

Restart=always
StartLimitInterval=0
KillSignal=SIGKILL
RestartSec=5
