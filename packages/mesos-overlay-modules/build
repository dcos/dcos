#!/bin/bash
set -o nounset -o pipefail

pushd /pkg/src/mesos-overlay-modules/
./bootstrap
popd

export LD_LIBRARY_PATH=/opt/mesosphere/lib

mkdir -p build
pushd build
/pkg/src/mesos-overlay-modules/configure \
     --with-mesos=/opt/mesosphere/active/mesos \
     --prefix="$PKG_PATH"
make -j8
make install
popd
