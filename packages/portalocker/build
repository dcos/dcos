#!/bin/bash
source /opt/mesosphere/environment.export
export LIB_INSTALL_DIR="$PKG_PATH/lib/python3.6/site-packages"
mkdir -p "$LIB_INSTALL_DIR"

# portalocker is a portable version of fctrl that works on windows and linux.
# on linux it is just fctrl and on windows it maps to win32 APIs.
pip3 install --no-deps --no-index --target="$LIB_INSTALL_DIR" /pkg/src/portalocker/*.whl
