{
  "Resources": {
    "PrivateAgentLaunchConfig" : {
      "Type" : "AWS::AutoScaling::LaunchConfiguration",
      "Properties" : {
        "KeyName" : { "Ref" : "KeyName" },
        "ImageId": {
          "Fn::If": [
            "UseCustomAMI",
            {
              "Ref": "CustomAMI"
            },
            {
              "Fn::FindInMap": [
                "RegionToAmi",
                {
                  "Ref": "AWS::Region"
                },
                "{{ os_type }}"
              ]
            }
          ]
        },
        "BlockDeviceMappings" : [ { "DeviceName" : "/dev/sdb", "VirtualName" : "ephemeral0" } ],
        "SecurityGroups" : [ { "Ref" : "PrivateAgentSecurityGroup" } ],
        "IamInstanceProfile" : { "Ref" : "PrivateAgentInstanceProfile" },
        "AssociatePublicIpAddress" : "false",
        {{ aws_private_agent_spot_price }}
        "InstanceType" : { "Ref" : "PrivateAgentInstanceType" },
        "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
          {{ cloud_config }}
        ]]}}
      }
    },
    "PrivateAgentInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "PrivateAgentRole"
          }
        ]
      }
    },
    "PrivateAgentServerGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "CreationPolicy": {
        "ResourceSignal": {
          "Count": {
            "Ref": "PrivateAgentInstanceCount"
          },
          "Timeout": {
            "Fn::FindInMap": [
              "Parameters",
              "StackCreationTimeout",
              "default"
            ]
          }
        }
      },
      "Properties": {
        "MinSize": {
          "Ref": "PrivateAgentInstanceCount"
        },
        "DesiredCapacity": {
          "Ref": "PrivateAgentInstanceCount"
        },
        "MaxSize": {
          "Ref": "PrivateAgentInstanceCount"
        },
        "LaunchConfigurationName": {
          "Ref": "PrivateAgentLaunchConfig"
        },
        "VPCZoneIdentifier": [
          {
            "Ref": "PrivateSubnet"
          }
        ],
        "Tags": [
          {
            "Value": "mesos-private-agent",
            "Key": "role",
            "PropagateAtLaunch": "true"
          }
        ]
      }
    },
    "PrivateAgentRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sts:AssumeRole"
              ],
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "PrivateAgents",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "cloudformation:*"
                  ],
                  "Resource": [
                    {
                      "Ref": "AWS::StackId"
                    },
                    {
                      "Fn::Join": [
                        "",
                        [
                          {
                            "Ref": "AWS::StackId"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Resource": "*",
                  "Action": [
                    "ec2:CreateTags",
                    "ec2:DescribeInstances",
                    "ec2:CreateVolume",
                    "ec2:DescribeVolumes",
                    "ec2:DescribeVolumeStatus",
                    "ec2:DescribeVolumeAttribute",
                    "ec2:CreateSnapshot",
                    "ec2:CopySnapshot",
                    "ec2:DeleteSnapshot",
                    "ec2:DescribeSnapshots",
                    "ec2:DescribeSnapshotAttribute",
                    "autoscaling:DescribeAutoScalingGroups",
                    "cloudwatch:PutMetricData"
                  ],
                  "Effect": "Allow"
                },
                {
                  "Resource": {
                    "Fn::Join" : [
                      ":",
                      [
                        "arn:aws:ec2",
                        { "Ref" : "AWS::Region" },
                        { "Ref" : "AWS::AccountId" },
                        "volume/*"
                      ]
                    ]
                  },
                  "Condition": {"StringEquals": {"ec2:ResourceTag/rexraySet": { "Ref" : "AWS::StackId" }}},
                  "Action": [
                    "ec2:DeleteVolume",
                    "ec2:AttachVolume",
                    "ec2:DetachVolume"
                  ],
                  "Effect": "Allow"
                },
                {
                  "Resource": {
                    "Fn::Join" : [
                      ":",
                      [
                        "arn:aws:ec2",
                        { "Ref" : "AWS::Region" },
                        { "Ref" : "AWS::AccountId" },
                        "instance/*"
                      ]
                    ]
                  },
                  "Condition": {"StringEquals": {"ec2:ResourceTag/aws:cloudformation:stack-id": { "Ref" : "AWS::StackId" }}},
                  "Action": [
                    "ec2:AttachVolume",
                    "ec2:DetachVolume"
                  ],
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
  },
  "Parameters": {
    "PrivateAgentInstanceCount": {
      "Type": "Number",
      "Default": "5",
      "Description": "\nSpecify the number of private agent nodes or accept the default."
    },
    "KeyName": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "\nSpecify your AWS EC2 Key Pair."
    },
    "InternalMasterLoadBalancerDnsName": {
      "Description" : "\nDNS Name of Internal Load Balancer. Has to be valid for agents to join a running cluster",
      "Type": "String"
    },
    "PrivateAgentSecurityGroup": {
      "Description" : "\nSecurity group used by Private Agents, typically with limited access to the outside",
      "Type": "String"
    },
    "PrivateSubnet": {
      "Description" : "\nSubnet ID for use by all private agent nodes",
      "Type": "String"
    },
    "PrivateAgentInstanceType": {
      "Type": "String",
      "Default": "m3.xlarge",
      "Description" : "\nRegion-specific instance type. E.g. m3.xlarge"
    },
    "CustomAMI": {
      "Default": "default",
      "Type": "String",
      "Description": "\nExisting AMI in the deploy region which has all DC/OS pre-requisites installed or 'default'",
      "AllowedPattern": "(default|ami-[a-f0-9]{8})"
    }
  },
  "Conditions": {
    "UseCustomAMI": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Ref": "CustomAMI"
            },
            "default"
          ]
        }
      ]
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "DcosImageCommit": "unset",
    "TemplateGenerationDate": "unset"
  },
  "Mappings": {
    "Parameters": {
      "StackCreationTimeout": {
        "default": "PT60M"
      }
    },
    "NATAmi": {
      "us-west-2": {
        "default": "ami-bb69128b"
      },
      "sa-east-1": {
        "default": "ami-b972dba4"
      },
      "ap-northeast-1": {
        "default": "ami-55c29e54"
      },
      "us-east-1": {
        "default": "ami-4c9e4b24"
      },
      "ap-southeast-1": {
        "default": "ami-b082dae2"
      },
      "eu-central-1": {
        "default": "ami-204c7a3d"
      },
      "us-west-1": {
        "default": "ami-2b2b296e"
      },
      "eu-west-1": {
        "default": "ami-3760b040"
      },
      "ap-southeast-2": {
        "default": "ami-996402a3"
      }
    },
    "RegionToAmi": {
      "ap-northeast-1": {
        "coreos": "ami-965899f7",
        "el7": "ami-abf535ca"
      },
      "ap-southeast-1": {
        "coreos": "ami-3120fe52",
        "el7": "ami-c47ba5a7"
      },
      "ap-southeast-2": {
        "coreos": "ami-b1291dd2",
        "el7": "ami-bc2f1bdf"
      },
      "eu-central-1": {
        "coreos": "ami-3ae31555",
        "el7": "ami-d934c2b6"
      },
      "eu-west-1": {
        "coreos": "ami-b7cba3c4",
        "el7": "ami-dabdd6a9"
      },
      "sa-east-1": {
        "coreos": "ami-61e3750d",
        "el7": "ami-ac980ec0"
      },
      "us-east-1": {
        "coreos": "ami-6d138f7a",
        "el7": "ami-44f66853"
      },
      "us-gov-west-1": {
        "coreos": "ami-b712acd6",
        "el7": ""
      },
      "us-west-1": {
        "coreos": "ami-ee57148e",
        "el7": "ami-a883c0c8"
      },
      "us-west-2": {
        "coreos": "ami-dc6ba3bc",
        "el7": "ami-a4dd16c4"
      }
    }
  },
  "Description": "DC/OS AWS CloudFormation Advanced Private Agent Template"
}
